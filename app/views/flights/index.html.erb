<%= form_with url: root_path, method: :get do |form| %>
  <%= form.select :origin, options_for_select(@airports), prompt: "From..." %>
  <%= form.select :destination, options_for_select(@airports), prompt: "To..." %>
  <%= form.select :date, options_for_select(@dates), prompt: "When?" %>
  <%= form.select :passenger_count, (1..4), prompt: "How many people?" %>
  <%= form.submit "Search flights" %>
<% end %>

<div>
  <% @flights.by_time.each do |flight| %>
    <div>
      <%= "#{(flight.flight_time) / 60}:#{(flight.flight_time) % 60}" %>
    </div>
    <div>
      <%= "#{flight.origin.name} (#{flight.origin.code}) - #{flight.destination.name} (#{flight.destination.code})" %>
    </div>
    <div>

    </div>
  <% end %>
</div>